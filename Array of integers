#include<stdio.h>
int main ()
{
int a[50];
int max=a[0],min=a[0],sum=0;
int i,n;
float avg;
printf("enter the value of n");
scanf("%d",&n);
printf("enter the elements of array");
for(i=0;i<n;i++)
{ 
scanf("%d",&a[0]);
}
for(i=0;i<n;i++)
{
if(a[i]>max)
{
max=a[i];
}
}
for(i=0;i<n;i++)
{
if(a[i]<min)
{
min=a[i];
}
}
for(i=0;i<n;i++)
{
sum=sum+a[i];
}
avg=sum/n;
printf("the maximum is %d\n",max);
printf("the minimun is %d\n",min);
printf("the sum of the elements in array is %d\n",sum);
printf("the average of the elements of array is %f\n",avg);
return 0;
}
output:
enter the value of n3
enter the elements of array12 23 34
the maximum is 34
the minimun is 0
the sum of the elements in array is 38
the average of the elements of array is 12.000000
